[Unit]
Description=HTB Clone Lab Agent
After=network-online.target docker.service
Wants=network-online.target
Requires=docker.service

[Service]
Type=simple
User=lab-agent
Group=docker
EnvironmentFile=/etc/lab-agent.env
ExecStart=/usr/local/bin/lab-agent
Restart=always
RestartSec=3
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/var/lib/lab-agent
LimitNOFILE=65535

[Install]
WantedBy=multi-user.target
